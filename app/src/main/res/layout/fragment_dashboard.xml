<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard.DashboardFragment"
    android:orientation="vertical"
    android:layout_margin="16dp">
    <TextView
        android:id="@+id/tvGoodMorning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Good morning, username"
        android:layout_marginEnd="16dp"
        android:textSize="30sp"
        android:textColor="@color/primaryColor"
        android:textStyle="normal"
        android:fontFamily="@font/robotolight"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cdvBMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your current BMI :"
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/tvBMIScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="19.3"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/tvBMIDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="18.5 - 24.9 : normal weight"
                    android:textSize="16sp"
                    android:textColor="@color/green"/>
            </LinearLayout>
            <ImageView
                android:src="@drawable/man"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cdvFoodDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total calories added today : "
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/tvCaloriesAddedToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="655 calories"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/tvCaloriesAddedThisMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="This month : 15626.2 calories"
                    android:textSize="16sp"/>
            </LinearLayout>
            <ImageView
                android:src="@drawable/hamburguer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cdvExerciseDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total calories burned today : "
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/tvCaloriesBurnedToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="858.99 calories"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/tvCaloriesBurnedThisMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="This month : 15626.2 calories"
                    android:textSize="16sp"/>
            </LinearLayout>
            <ImageView
                android:src="@drawable/runningcolor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>