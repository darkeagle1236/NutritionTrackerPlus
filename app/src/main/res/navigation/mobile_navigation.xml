<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_food">

    <fragment
        android:id="@+id/navigation_food"
        android:name="com.example.nutritiontracker.fooddashboard.FoodDashboardFragment"
        android:label="Food"
        tools:layout="@layout/fragment_food" />

    <fragment
        android:id="@+id/navigation_add"
        android:name="com.example.nutritiontracker.add.AddFragment"
        android:label="Add"
        tools:layout="@layout/fragment_add" />

    <fragment
        android:id="@+id/navigation_exercise"
        android:name="com.example.nutritiontracker.exercise.ExerciseDashboardFragment"
        android:label="Exercise"
        tools:layout="@layout/fragment_exercise" />
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.nutritiontracker.dashboard.DashboardFragment"
        android:label="Dashboard"
